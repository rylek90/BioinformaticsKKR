<mui:ModernWindow
    x:Class="BioinformaticsKKR.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mui="http://firstfloorsoftware.com/ModernUI"
    Title="MainWindow" Height="630" Width="1200"
    ResizeMode="CanMinimize"
    ContentSource="/View/MainView.xaml">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName=".NET Bio Library Overview">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="File" Source="/View/MainView.xaml" />
                <mui:Link DisplayName="Align" Source="/View/AlignView.xaml" />
                <mui:Link DisplayName="Manipulation" Source="/View/ManipulationView.xaml" />
                <mui:Link DisplayName="Statistics" Source="/View/StatisticsView.xaml" />
                <mui:Link DisplayName="Multi-align" Source="/View/MultiAlignView.xaml" />
                <mui:Link DisplayName="About" Source="/View/AboutView.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

</mui:ModernWindow>